#include<stdio.h>
int main()
{
	int day;
	printf("the week days are 1-sunday,2-monday,3-tuesday,4-wensday,5-thusday,6-friday,7-saturday\n");
	printf("choose your day to print:",day);
	scanf("%d",&day);
	switch (day)
	{
		case 1:
			printf("sunday");
			break;
		case 2:
			printf("monday");
			break;
		case 3:
			printf("tuesday");
			break;
		case 4:
			printf("wensday");
			break;
		case 5:
			printf("thusday");
			break;
		case 6:
			printf("friday");
			break;
		case 7:
			printf("saturday");
			break;
	default:
			printf("Invalid input!");
                        break;
    }
	return 0;
}

